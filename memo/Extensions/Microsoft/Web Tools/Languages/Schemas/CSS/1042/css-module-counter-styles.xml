<CssModule name="Counter Styles" standard-reference="http://www.w3.org/TR/css-counter-styles-3/" status="LC" pub-date="2014-08-26">

  <CssPropertyValue type="symbolsdef">
    <entry value="url()"/>
  </CssPropertyValue>

  <CssAtDirective _locID="counter-style" version="3.0" browsers="none" include-root-properties="false" include-root-directives="false" syntax="@$(name) { system: cyclic; }" standard-reference="http://www.w3.org/TR/css-counter-styles-3/#at-ruledef-counter-style">

    <CssProperty _locID="system" _locAttrData="description" restriction="enum, integer, identifier" syntax="$(name): extends decimal;" description="카운터 값을 기반으로 카운터 표현을 작성하는 데 사용할 알고리즘을 지정합니다.">

      <entry value="cyclic"/>
      <entry value="numeric"/>
      <entry value="alphabetic"/>
      <entry value="symbolic"/>
      <entry value="additive"/>
      <entry value="fixed"/>
      <entry value="extends"/>
    </CssProperty>

    <CssProperty _locID="negative" _locAttrData="description" type="symbolsdef" restriction="url, string, identifier" syntax="$(name): cyclic;" description="카운터 값이 음수인 경우 표현을 변경하는 방법을 정의합니다."/>

    <CssProperty _locID="prefix" _locAttrData="description" type="symbolsdef" restriction="url, string, identifier" description="마커 표현 앞에 추가되는 기호를 지정합니다."/>

    <CssProperty _locID="suffix" _locAttrData="description" type="symbolsdef" restriction="url, string, identifier" syntax="$(name): ') ';" description="마커 표현에 추가되는 기호를 지정합니다."/>

    <CssProperty _locID="range" _locAttrData="description" restriction="enum, integer" syntax="$(name): infinite;" description="카운터 값을 기반으로 카운터 표현을 작성하는 데 사용할 알고리즘을 지정합니다.">
      <entry value="infinite"/>
      <entry value="auto"/>
    </CssProperty>

    <CssProperty _locID="pad" _locAttrData="description" type="symbolsdef" syntax="$(name): 2 '0';" restriction="url, integer, string, identifier" description="작성자가 'fixed-width' 카운터 스타일을 지정할 수 있게 합니다. 여기서 패드 값보다 짧은 표현은 특정 기호로 채워집니다."/>

    <CssProperty _locID="fallback" _locAttrData="description" restriction="identifier" syntax="$(name): decimal;" description="현재 카운터 스타일이 지정된 카운터 값에 대한 표현을 만들 수 없는 경우 사용할 대체 카운터 스타일을 지정합니다."/>

    <CssProperty _locID="symbols" _locAttrData="description" type="symbolsdef" syntax="$(name): url(white.svg);" restriction="url, string, identifier"/>

    <CssProperty _locID="additive-symbols" type="symbolsdef" syntax="$(name): 6 ⚅, 5 ⚄, 4 ⚃, 3 ⚂, 2 ⚁, 1 ⚀;" restriction="url, integer, string, identifier"/>

    <CssProperty _locID="speak-as" _locAttrData="description" restriction="enum, identifier" syntax="$(name): lower-latin;" description="지정된 카운터 스타일로 서식이 지정된 카운터의 음성 형식을 만드는 방법을 설명합니다.">

      <entry value="auto"/>
      <entry value="bullets"/>
      <entry value="numbers"/>
      <entry value="words"/>
      <entry value="spell-out"/>
    </CssProperty>

  </CssAtDirective>

  <CssProperty _locID="list-style" restriction="identifier">
    <entry value="symbols()"/>
  </CssProperty>

  <CssProperty _locID="list-style-type" restriction="identifier">
    <entry value="symbols()"/>
  </CssProperty>

</CssModule>
