<CssModule name="Syntax" standard-reference="http://www.w3.org/TR/css3-syntax/" status="WD" pub-date="2003-08-13">

  <CssAtDirective name="charset" _locID="charset-rule" _locAttrData="description, syntax" version="1.0" browsers="all" restriction="string" syntax="@charset 'utf-8';" description="문서의 문자 집합을 정의합니다." standard-reference="http://www.w3.org/TR/css3-syntax/#charset"/>

  <CssAtDirective name="import" _locID="import-rule" _locAttrData="description" version="1.0" browsers="all" syntax="@import url('file.css') tv, print;" description="다른 파일의 내용을 포함합니다." standard-reference="http://www.w3.org/TR/css3-syntax/#at-import"/>

  <CssAtDirective name="media" _locID="media-query-rule" _locAttrData="description" version="2.0" browsers="all" description="특정 미디어 유형의 스타일시트를 정의합니다." syntax="@media print { ... }" standard-reference="http://www.w3.org/TR/css3-mediaqueries"/>

  <CssAtDirective name="host" _locID="host-rule" _locAttrData="description" version="2.0" browsers="C" description="그림자 트리에 지정된 요소에 적용됩니다." syntax="@host { :scope { color: red; } }" standard-reference="http://www.w3.org/TR/shadow-dom/#host-at-rule"/>

  <CssAtDirective name="supports" _locID="supports-rule" _locAttrData="description" version="3.0" browsers="C,FF,O" description="조건이 사용자 에이전트에서 CSS 속성:값 쌍을 지원하는지 여부를 테스트하는 조건 그룹 규칙입니다." syntax="@supports (display: flexbox) { div { display: flexbox; } }" standard-reference="http://www.w3.org/TR/css3-conditional/#at-supports"/>

  <CssPropertyValue type="media" version="2.0">
    <entry version="2.0" value="all"/>
    <entry version="2.0" value="braille"/>
    <entry version="2.0" value="embossed"/>
    <entry version="2.0" value="handheld"/>
    <entry version="2.0" value="print"/>
    <entry version="2.0" value="projection"/>
    <entry version="2.0" value="screen"/>
    <entry version="2.0" value="speech"/>
    <entry version="2.0" value="tty"/>
    <entry version="2.0" value="tv"/>
  </CssPropertyValue>

</CssModule>
