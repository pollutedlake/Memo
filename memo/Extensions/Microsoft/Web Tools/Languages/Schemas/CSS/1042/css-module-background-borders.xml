    <CssProperty _locID="border-right-width" ref="border-width"/>
    <CssProperty _locID="border-bottom-width" ref="border-width"/>

    <CssProperty _locID="border-color" _locAttrData="description" type="color" restriction="color" version="1.0" description="요소의 모든 네 가장자리 둘레에 있는 테두리의 색입니다." syntax="td { $(name): blue; }" standard-reference="http://www.w3.org/TR/css3-background/#border-color"/>

    <CssProperty _locID="border-top-color" ref="border-color"/>
    <CssProperty _locID="border-left-color" ref="border-color"/>
    <CssProperty _locID="border-right-color" ref="border-color"/>
    <CssProperty _locID="border-bottom-color" ref="border-color"/>

    <CssPropertyValue type="border-style">
        <entry _locID="border-style_dashed" _locAttrData="description" version="1.0" value="dashed" description="끝이 모난 일련의 대시입니다."/>
        <entry _locID="border-style_dotted" _locAttrData="description" version="1.0" value="dotted" description="일련의 둥근 점입니다."/>
        <entry _locID="border-style_double" _locAttrData="description" version="1.0" value="double" description="사이에 공간이 조금 있는 두 평행 실선입니다. 선의 두께는 지정되지 않지만 선과 공간의 합계가 'border-width'와 같아야 합니다."/>
        <entry _locID="border-style_groove" _locAttrData="description" version="1.0" value="groove" description="캔버스에서 조각한 것처럼 보입니다. 일반적으로 'border-color'보다 약간 더 밝은 색과 약간 더 어두운 색으로 &quot;그림자&quot;를 만들어 이러한 효과를 낼 수 있습니다."/>
        <entry _locID="border-style_hidden" _locAttrData="description" version="3.0" value="hidden" description="'none'과 같지만 border-collapse 테이블에 대한 테두리 충돌 해결 규칙의 동작이 다릅니다."/>
        <entry _locID="border-style_inset" _locAttrData="description" version="1.0" value="inset" description="테두리 내부에 있는 콘텐츠가 캔버스 안으로 움푹 들어간 것처럼 보입니다. border-collapse 테이블에서 'ridge'로 처리됩니다."/>
        <entry _locID="border-style_none" _locAttrData="description" version="1.0" value="none" description="테두리가 없습니다. 색과 두께가 무시됩니다. 즉, 테두리가 이미지가 아닌 한 테두리의 두께가 0입니다."/>
        <entry _locID="border-style_outset" _locAttrData="description" version="1.0" value="outset" description="테두리 내부에 있는 콘텐츠가 캔버스에서 튀어 나오는 것처럼 보입니다. border-collapse 테이블에서 'groove'로 처리됩니다."/>
        <entry _locID="border-style_ridge" _locAttrData="description" version="1.0" value="ridge" description="캔버스에서 튀어 나오는 것처럼 보입니다."/>
        <entry _locID="border-style_solid" _locAttrData="description" version="1.0" value="solid" description="단일 선분입니다."/>
