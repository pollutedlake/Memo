<CssModule name="Multi-column" standard-reference="http://www.w3.org/TR/css3-multicol/" status="CR" pub-date="2011-04-12">

  <CssProperty _locID="column-width"
               _locAttrData="description"
               version="3.0"
               browsers="IE10,O11.5,S9"
               restriction="length, enum"
               syntax="div { $(name): 100px; }"
               description="This property describes the width of columns in multicol elements."
               standard-reference="http://www.w3.org/TR/css3-multicol/#column-width">

    <entry _locID="column-width_auto"
           _locAttrData="description"
           value="auto"
           description="The width depends on the values of other properties." />
  </CssProperty>

  <CssProperty _locID="column-count"
               _locAttrData="description"
               version="3.0"
               browsers="IE10,O11.5,S9"
               restriction="integer, enum"
               syntax="div { $(name): 3; }"
               description="Describes the optimal number of columns into which the content of the element will be flowed."
               standard-reference="http://www.w3.org/TR/css3-multicol/#column-count">

    <entry _locID="column-count_auto"
           _locAttrData="description"
           value="auto"
           description="Determines the number of columns by the 'column-width' property and the element width." />
  </CssProperty>

  <CssProperty _locID="columns"
               _locAttrData="description"
               version="3.0"
               browsers="IE10,O11.5,S9"
               restriction="length, integer, enum"
               syntax="div { $(name): 100px 3; }"
               description="A shorthand property which sets both 'column-width' and 'column-count'."
               standard-reference="http://www.w3.org/TR/css3-multicol/#columns0">

    <entry _locID="columns_auto"
           _locAttrData="description"
           value="auto"
           description="The width depends on the values of other properties." />
  </CssProperty>

  <CssProperty _locID="column-gap"
               _locAttrData="description"
               version="3.0"
               browsers="IE10,O11.5,S9"
               restriction="length, enum"
               syntax="div { $(name): 10px; }"
               description="Sets the gap between columns. If there is a column rule between columns, it will appear in the middle of the gap."
               standard-reference="http://www.w3.org/TR/css3-multicol/#column-gap0">

    <entry _locID="column-gap_normal"
           _locAttrData="description"
           value="normal"
           description="User agent specific and typically equivalent to 1em." />
  </CssProperty>

  <CssProperty _locID="column-rule-color"
               _locAttrData="description"
               version="3.0"
               browsers="IE10,O11.5,S9"
               type="color"
               restriction="color"
               syntax="div { $(name): #ff0; }"
               description="Sets the color of the column rule"
               standard-reference="http://www.w3.org/TR/css3-multicol/#column-rule-color" />

  <CssProperty _locID="column-rule-style"
               _locAttrData="description"
               version="3.0"
               browsers="IE10,O11.5,S9"
               type="border-style"
               restriction="enum"
               syntax="div { $(name): solid; }"
               description="Sets the style of the rule between columns of an element."
               standard-reference="http://www.w3.org/TR/css3-multicol/#column-rule-style" />

  <CssProperty _locID="column-rule-width"
               _locAttrData="description"
               version="3.0"
               browsers="IE10,O11.5,S9"
               type="border-width"
               restriction="length, enum"
               syntax="div { $(name): 3px; }"
               description="Sets the width of the rule between columns. Negative values are not allowed."
               standard-reference="http://www.w3.org/TR/css3-multicol/#column-rule-width" />

  <CssProperty _locID="column-rule"
               _locAttrData="description"
               ref="border"
               version="3.0"
               browsers="IE10,O11.6"
               description="This property is a shorthand for setting 'column-rule-width', 'column-rule-style', and 'column-rule-color' at the same place in the style sheet. Omitted values are set to their initial values."
               standard-reference="http://www.w3.org/TR/css3-multicol/#column-rule0" />

  <CssProperty _locID="break-inside"
               _locAttrData="description"
               version="3.0"
               browsers="IE10,O11.6"
               restriction="enum"
               syntax="h2 { $(name): avoid-column; }"
               description="Describes the page/column break behavior inside the generated box."
               standard-reference="http://www.w3.org/TR/css3-multicol/#column-breaks">

    <entry _locID="break-inside_auto"
           _locAttrData="description"
           value="auto"
           description="Neither force nor forbid a page/column break inside the generated box." />
    <entry _locID="break-inside_avoid"
           _locAttrData="description"
           value="avoid"
           description="Avoid a page/column break inside the generated box." />
    <entry _locID="break-inside_avoid-page"
           _locAttrData="description"
           value="avoid-page"
           description="Avoid a page break inside the generated box." />
    <entry _locID="break-inside_avoid-column"
           _locAttrData="description"
           value="avoid-column"
           description="Avoid a column break inside the generated box." />
  </CssProperty>

  <CssProperty _locID="break-before"
               _locAttrData="description"
               version="3.0"
               browsers="IE10,O11.6"
               restriction="enum"
               syntax="h2 { $(name): column; }"
               description="Describes the page/column break behavior before the generated box."
               standard-reference="http://www.w3.org/TR/css3-multicol/#column-breaks">

    <entry _locID="break-before_auto"
           _locAttrData="description"
           value="auto"
           description="Neither force nor forbid a page/column break before/after the generated box." />
    <entry _locID="break-before_always"
           _locAttrData="description"
           value="always"
           description="Always force a page break before/after the generated box." />
    <entry _locID="break-before_avoid"
           _locAttrData="description"
           value="avoid"
           description="Avoid a page/column break before/after the generated box." />
    <entry _locID="break-before_left"
           _locAttrData="description"
           value="left"
           description="Force one or two page breaks before/after the generated box so that the next page is formatted as a left page." />
    <entry _locID="break-before_right"
           _locAttrData="description"
           value="right"
           description="Force one or two page breaks before/after the generated box so that the next page is formatted as a right page." />
    <entry _locID="break-before_page"
           _locAttrData="description"
           value="page"
           description="Always force a page break before/after the generated box." />
    <entry _locID="break-before_column"
           _locAttrData="description"
           value="column"
           description="Always force a column break before/after the generated box." />
    <entry _locID="break-before_avoid-page"
           _locAttrData="description"
           value="avoid-page"
           description="Avoid a page break before/after the generated box." />
    <entry _locID="break-before_avoid-column"
           _locAttrData="description"
           value="avoid-column"
           description="Avoid a column break before/after the generated box." />
  </CssProperty>

  <CssProperty _locID="break-after" browsers="IE10,O11.5" ref="break-before" />

  <CssProperty _locID="column-span"
               _locAttrData="description"
               version="3.0"
               browsers="IE10,O11.5,S9"
               restriction="enum"
               syntax="article { $(name): all; }"
               description="Describes the page/column break behavior after the generated box."
               standard-reference="http://www.w3.org/TR/css3-multicol/#column-span0">

    <entry _locID="column-span_none"
           _locAttrData="description"
           value="none"
           description="The element does not span multiple columns." />
    <entry _locID="column-span_all"
           _locAttrData="description"
           value="all"
           description="The element spans across all columns. Content in the normal flow that appears before the element is automatically balanced across all columns before the element appear." />
  </CssProperty>

  <CssProperty _locID="column-fill"
               _locAttrData="description"
               version="3.0"
               browsers="IE10,O11.5,S9"
               restriction="enum"
               syntax="article { $(name): balance; }"
               description="In continuous media, this property will only be consulted if the length of columns has been constrained. Otherwise, columns will automatically be balanced."
               standard-reference="http://www.w3.org/TR/css3-multicol/#filling-columns">

    <entry _locID="column-fill_auto"
           _locAttrData="description"
           value="auto"
           description="Fills columns sequentially." />
    <entry _locID="column-fill_balance"
           _locAttrData="description"
           value="balance"
           description="Balance content equally between columns, if possible." />
  </CssProperty>

</CssModule>