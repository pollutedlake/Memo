<CssModule name="Transitions" standard-reference="http://www.w3.org/TR/css3-transitions/" status="WD" pub-date="20132-11-19">

    <CssProperty _locID="transition"
                 _locAttrData="description"
                 version="3.0"
                 browsers="C,FF16,IE10,O12.5,S"
                 restriction="time, property, enum"
                 type="transition-property, timing-functions"
                 syntax="div { $(name): background-color linear 1s; }"
                 description="Shorthand property combines four of the transition properties into a single property."
                 standard-reference="http://www.w3.org/TR/css3-transitions/#transition" />

    <CssProperty _locID="transition-delay"
                 _locAttrData="description"
                 version="3.0"
                 browsers="C,FF16,IE10,O12.5,S"
                 restriction="time"
                 syntax="div { $(name): 1s; }"
                 description="Defines when the transition will start. It allows a transition to begin execution some period of time from when it is applied."
                 standard-reference="http://www.w3.org/TR/css3-transitions/#transition-delay" />

    <CssProperty _locID="transition-duration"
                 _locAttrData="description"
                 version="3.0"
                 browsers="C,FF16,IE10,O12.5,S"
                 restriction="time"
                 syntax="div { $(name): 1s; }"
                 description="Specifies how long the transition from the old value to the new value should take."
                 standard-reference="http://www.w3.org/TR/css3-transitions/#transition-duration" />

    <CssProperty _locID="transition-property"
                 _locAttrData="description"
                 version="3.0"
                 browsers="C,FF16,IE10,O12.5,S"
                 restriction="property"
                 type="transition-property"
                 syntax="div { $(name): background-color; }"
                 description="Specifies the name of the CSS property to which the transition is applied."
                 standard-reference="http://www.w3.org/TR/css3-transitions/#transition-property" />

    <CssPropertyValue type="transition-property">
        <entry _locID="transition-property_none"
               _locAttrData="description"
               value="none"
               description="No property will transition." />
        <entry _locID="transition-property_all"
               _locAttrData="description"
               value="all"
               description="Every property that is able to undergo a transition will do so." />
    </CssPropertyValue>

    <CssProperty _locID="transition-timing-function"
                 _locAttrData="description"
                 version="3.0"
                 browsers="C,FF16,IE10,O12.5,S"
                 type="timing-functions"
                 restriction="enum"
                 syntax="div { $(name): linear; }"
                 description="Describes how the intermediate values used during a transition will be calculated."
                 standard-reference="http://www.w3.org/TR/css3-transitions/#transition-timing-function" />

    <CssPropertyValue type="timing-functions">
        <entry _locID="transition-timing-function_ease"
               _locAttrData="description"
               value="ease"
               description="Equivalent to cubic-bezier(0.25, 0.1, 0.25, 1.0)." />
        <entry _locID="transition-timing-function_linear"
               _locAttrData="description"
               value="linear"
               description="Equivalent to cubic-bezier(0.0, 0.0, 1.0, 1.0)." />
        <entry _locID="transition-timing-function_ease-in"
               _locAttrData="description"
               value="ease-in"
               description="Equivalent to cubic-bezier(0.42, 0, 1.0, 1.0)." />
        <entry _locID="transition-timing-function_ease-out"
               _locAttrData="description"
               value="ease-out"
               description="Equivalent to cubic-bezier(0, 0, 0.58, 1.0)." />
        <entry _locID="transition-timing-function_ease-in-out"
               _locAttrData="description"
               value="ease-in-out"
               description="Equivalent to cubic-bezier(0.42, 0, 0.58, 1.0)." />
        <entry _locID="transition-timing-function_cubic-bezier"
               _locAttrData="description"
               value="cubic-bezier()"
               description="Specifies a cubic-bezier curve. The four values specify points P1 and P2  of the curve as (x1, y1, x2, y2). All values must be in the range [0, 1]." />
        <entry _locID="transition-timing-function_step-start"
               _locAttrData="description"
               value="step-start"
               description="The step-start function is equivalent to steps(1, start)." />
        <entry _locID="transition-timing-function_step-end"
               _locAttrData="description"
               value="step-end"
               description="The step-end function is equivalent to steps(1, end)." />
        <entry _locID="transition-timing-function_steps"
               _locAttrData="description"
               value="steps(1, start)"
               description="The first parameter specifies the number of intervals in the function. The second parameter, which is optional, is either the value 'start' or 'end'." />
    </CssPropertyValue>

</CssModule>
